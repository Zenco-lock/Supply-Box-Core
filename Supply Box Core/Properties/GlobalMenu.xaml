<UserControl x:Class="Supply_Box_Core.GlobalMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="60">

    <!-- Componente reutilizável do tipo UserControl que representa um menu global com um botão de menu (ícone 'hambúrguer') -->

    <Grid>
        <!-- Botão com o ícone "☰" (conhecido como ícone de menu ou 'hambúrguer')
             - Executa o método MenuButton_Click ao ser clicado
             - Centralizado dentro do Grid
             - Sem borda visível, fundo transparente e texto branco para melhor integração visual -->
        <Button Content="☰" Click="MenuButton_Click" Width="60" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" 
                Background="Transparent" Foreground="White" BorderThickness="0" BorderBrush="Transparent"/>
    </Grid>
</UserControl>