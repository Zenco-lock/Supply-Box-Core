<Page x:Class="Supply_Box_Core.PasswordManagerAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Supply_Box_Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordManagerAuth">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- This inner Grid maintains the original layout -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Original TextBlock -->
            <TextBlock x:Name="AuthMessageText"
                       Text="Authenticating with Windows Hello..."
                       FontSize="22"
                       Foreground="White"
                       FontFamily="Bahnschrift SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- The PasswordBox remains hidden (or collapsed) if not used -->
            <PasswordBox x:Name="AuthPasswordBox"
                         Width="344"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10,98,0,0"
                         Visibility="Collapsed"/>

            <!-- The Login button is initially hidden (space reserved) -->
            <Button x:Name="LoginButton"
                    Content="Login with Windows Hello"
                    Width="200" 
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,129,0,0"
                    Click="LoginButton_Click"
                    Visibility="Hidden"/>
        </Grid>
    </Grid>
</Page>