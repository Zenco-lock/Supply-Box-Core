<Page x:Class="Supply_Box_Core.PasswordManagerAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Supply_Box_Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordManagerAuth">

    <!-- Página responsável pela autenticação do utilizador usando o Windows Hello ou palavra-passe -->
    <Grid Background="Gray">

        <!-- Definição das linhas da grelha (neste caso, apenas uma linha expansível) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Definição das colunas da grelha (neste caso, apenas uma coluna expansível) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Componente GlobalMenu, posicionado no canto superior esquerdo -->
        <local:GlobalMenu HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Conteúdo principal da página, centrado no ecrã -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Mensagem de autenticação apresentada ao utilizador -->
            <TextBlock x:Name="AuthMessageText"
                       Text="Authenticating with Windows Hello..."
                       FontSize="22"
                       Foreground="White"
                       FontFamily="Bahnschrift SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Campo de palavra-passe que poderá ser utilizado como alternativa ao Windows Hello
                 Está oculto por padrão -->
            <PasswordBox x:Name="AuthPasswordBox"
                         Width="344"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10,98,0,0"
                         Visibility="Collapsed"/>

            <!-- Botão de login, inicialmente oculto
                 Poderá ser ativado conforme a lógica da aplicação -->
            <Button x:Name="LoginButton"
                    Content="Login with Windows Hello"
                    Width="200" 
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,129,0,0"
                    Click="LoginButton_Click"
                    Visibility="Hidden"/>
        </Grid>
    </Grid>
</Page>