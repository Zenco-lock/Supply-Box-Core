<Page x:Class="Supply_Box_Core.PasswordManagerAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Supply_Box_Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordManagerAuth">

    <Grid Background="Gray">
        <TextBlock Text="Authentication Password:" FontSize="22" Foreground="White" FontFamily="Bahnschrift SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" />
        <PasswordBox x:Name="AuthPasswordBox" Width="344" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0" />
        <Button Content="Login" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,264,0,0" Click="Button_Click" />
    </Grid>

</Page>
