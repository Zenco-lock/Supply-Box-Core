<Window x:Class="Supply_Box_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supply_Box_Core"
        mc:Ignorable="d"
        Title="Supply Box Core" Height="450" Width="800">

    <!-- Janela principal da aplicação com dimensões e título definidos -->

    <Grid>
        <!-- Frame utilizado para navegar entre páginas da aplicação.
             A propriedade NavigationUIVisibility="Hidden" oculta os controlos de navegação (como os botões de voltar/avançar). -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>